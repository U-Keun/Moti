{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Moti",
  "version": "0.1.0",
  "identifier": "com.u-keunsong.moti",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Moti",
        "width": 1100,
        "height": 720,
        "resizable": true,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
